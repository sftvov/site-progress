header.header._lpr
  .container
    .header__top-level.row.x4col
      .header__mobile-logo-city-wrapper
        a.n3hide(href="index.html") 
          img.header__mobile-logo-img(src="img/logo.svg" alt="")
        .n2w2
          button.header-select
            .triangle
            p.p1 Санкт-Петербург
            svg.header-select__svg
              use(xlink:href='img/sprite/symbols.svg#chevron-down')
            .header-select__variants-wrapper
              .header-select__variants-border
                .header-select__variants
                  a.p1.hover.accent(href="page-main.html") Санкт-Петербург
                  a.p1.hover(href="page-main.html") Москва
      .header__icon-links.row.x2hide
        a.header__icon-link(href="#")
          svg.icon
            use(xlink:href='img/sprite/symbols.svg#plan')
          | План обучения
        a.header__icon-link(href="#")
          svg.icon
            use(xlink:href='img/sprite/symbols.svg#key')
          | Бронь отелей
        a.header__icon-link(href="#")
          svg.icon
            use(xlink:href='img/sprite/symbols.svg#mail')
          | Рассылка
      .header__contacts.x3col.g5
        button.header-select.n1w2
          .triangle
          p.p1.accent 8 (800) 333-88-44
          svg.header-select__svg.header-select__svg--accent
            use(xlink:href='img/sprite/symbols.svg#chevron-down')
          .header-select__variants-wrapper
            .header-select__variants-border
              .header-select__variants
                a.p1.hover.accent(href="tel:88003338844") 8 (800) 333-88-44
                a.p1.hover(href="tel:88123318888") 8 (812) 331-88-88
        a.header__mail.p1.n1w2(href="mailto:client@cntiprogress.ru")
          svg.header__mail-svg
            use(xlink:href='img/sprite/symbols.svg#email')
          span.header__mail-span client@cntiprogress.ru
    .header__body.aic.m5
      a.header__logo-link.x3hide(href="index.html") 
        img.header__logo-link-img(src="img/logo.svg" alt="")
      form.header__search
        .header__search-input-wrapper.x3w3
          input.header__search-input.p1(placeholder='Поиск по сайту')
          button.header__search-close
            svg.icon
              use(xlink:href='img/sprite/symbols.svg#x-close')
          .search-results
            each course in searchResults
              a.search-results__item(href="#") 
                p.search-results__number 71455
                p.search-results__name !{course.name}
                p.search-results__dates !{course.date}  
        button.header__search-btn.p1.n2w2 #[span.x4hide Найти #[span.x2hide курс]]          
          svg.header__search-btn-svg.n4hide
            use(xlink:href='img/sprite/symbols.svg#search')
      .header__burger-wrapper.n2hide
        button.header__burger.burger
          span.burger__line
          span.burger__line
          span.burger__line
    include _header_#template_menu.pug
    .header__info-panel
      p #[span.x3hide Готов учебный план на 2025 год.] Расписание курсов по всем отраслевым направлениям #[span.x4hide — в одной брошюре.]#[br.n3hide] #[span.n3hide Готов учебный план на 2025 год.]
