mixin courseTypeCard(props)
  article.col3
    h2.tb.t1= props.title
    .col5
      p.p1= props.description
      .col7
        each feature in props.features
          p.r5.aic
            svg.i20
              use(xlink:href=`img/sprite/symbols.svg#${feature.icon}`)
            span.p2= feature.text
      footer.col7
        if props.learningDescription
          h3.t2d Обучение
          p.p1= props.learningDescription

//- Использование
.section
  .container
    .col1.n2ol1.n1or3.n2or1
      each courseType in regularFormats
        +courseTypeCard(courseType)

section.section
  .container
    .body
      .col1.n2ol1.n1or3.n2or1
        .col3
          h2.ta.t1 Дистанционное ОБУЧЕНИЕ
          p.p1 Дистанционные курсы и программы профпереподготовки не привязаны к датам. #[br]Слушатель сам определяет расписание занятий и комфортный темп обучения.
