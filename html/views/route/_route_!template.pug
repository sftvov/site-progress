          source(media="(max-width: 539.95px)", srcset="img/contacts/x4" + route.img)
          source(media="(max-width: 767.95px)", srcset="img/contacts/x3" + route.img)
          img.n1w5.n3w6.w4(src="img/contacts/" + route.img alt="")
        .col3.ais
          each block in route.blocks
            .col5
              h3.t2d.r10.aic
                svg.sd.sw2.i24
                  use(xlink:href='img/sprite/symbols.svg#' + block.icon)
                | !{block.title}
              div
                each p in block.text
                  p.p1 !{p}
