//- Миксин для основного меню
mixin headerMenuItem(item)
  if item.subitems
    .-header-menu-item
      button.-header-menu-item__dropdown._menu-btn
        .-header-menu-item__punkt
          span.-header-menu-item__punkt-name= item.name
          svg.-header-menu-item__punkt-svg
            use(xlink:href='img/sprite/symbols.svg#chevron-down')
          .triangle.x2hide
      .-header-menu-item__submenu._menu-body
        .-header-menu-item__submenu-items
          each subitem in item.subitems
            +headerSubmenuItem(subitem)
  else
    .-header-menu-item
      a.-header-menu-item__punkt(href=item.link)
        span.-header-menu-item__punkt-name= item.name