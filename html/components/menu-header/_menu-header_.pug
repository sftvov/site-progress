//- Основная разметка меню
mixin headerMenu(menuItems)
  .-header-menu._lpr
    .-header-menu__mobile-container._burger-menu
      .-header-menu__icon-links
        a.-header-menu__icon-link(href="#")
          svg.i16
            use(xlink:href='img/sprite/symbols.svg#plan')
          | План обучения
        a.-header-menu__icon-link(href="#")
          svg.i16
            use(xlink:href='img/sprite/symbols.svg#key')
          | Бронь отелей
        a.-header-menu__icon-link(href="#")
          svg.i16
            use(xlink:href='img/sprite/symbols.svg#mail')
          | Рассылка
        .-header-menu__icon-close-wrapper
          button.-header-menu__icon-link.-header-menu__icon-close._burger-menu-close(href="#")
            svg.i16
              use(xlink:href='img/sprite/symbols.svg#x-close')
            | Закрыть
      .-header-menu__items
        each item in menuItems
          +headerMenuItem(item)
    .-header-menu__square.bga
    .-header-menu__square.bgb
    .fg.bgs.x2hide